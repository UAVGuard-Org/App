<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ComboBox?>
<GridPane
    fx:id="home"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.uavguard.app.Controller"
    HBox.hgrow="ALWAYS"
    stylesheets="@../style/home.css"
>
    <rowConstraints>
        <RowConstraints percentHeight="45" />
        <RowConstraints percentHeight="35" />
        <RowConstraints percentHeight="20" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <HBox fx:id="screen" alignment="CENTER" GridPane.rowIndex="0">
        <HBox fx:id="stream" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="No video stream available now..." />
        </HBox>
    </HBox>

    <HBox fx:id="control" alignment="CENTER" GridPane.rowIndex="1">
        <Pane fx:id="joystick">
            <Circle fx:id="stroke" layoutX="100" layoutY="100" radius="130" />
            <Circle fx:id="lbase" layoutX="100" layoutY="100" radius="100" />
            <Circle
                fx:id="lknob"
                layoutX="100"
                layoutY="100"
                onMouseReleased="#onMouseReleased"
                onMouseDragged="#LeftOnMouseDragged"
                radius="30"
            />
        </Pane>

        <Pane fx:id="joystick">
            <Circle fx:id="stroke" layoutX="100" layoutY="100" radius="130" />
            <Circle fx:id="rbase" layoutX="100" layoutY="100" radius="100" />
            <Circle
                fx:id="rknob"
                layoutX="100"
                layoutY="100"
                onMouseReleased="#onMouseReleased"
                onMouseDragged="#RightOnMouseDragged"
                radius="30"
            />
        </Pane>
    </HBox>

    <VBox fx:id="commands" GridPane.rowIndex="2" alignment="CENTER">
        <ComboBox fx:id="select" />
        <Button text="Enviar comando" />
    </VBox>
</GridPane>
