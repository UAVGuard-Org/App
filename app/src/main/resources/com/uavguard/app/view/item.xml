<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:id="item" xmlns:fx="http://javafx.com/fxml">
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>

    <HBox GridPane.columnIndex="0" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Label />
    </HBox>
    <HBox GridPane.columnIndex="1" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Label />
    </HBox>
    <HBox GridPane.columnIndex="2" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Label />
    </HBox>
    <HBox GridPane.columnIndex="3" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Button />
    </HBox>
</GridPane>
